<script type="text/javascript">
$(function() {

    paymentWidget.addPostDataGetter("{{ code }}", function(){
        var code = "{{ code }}";

        var tokenEl = $('#payment-' + code).find('select[name="' + code + '[token]"]');
        var tokenVal = tokenEl.val();

        return {
            payment_method: code,
            token: tokenVal
        };
    });
});
</script>
