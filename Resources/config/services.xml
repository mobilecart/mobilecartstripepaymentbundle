<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cart.payment.method.stripe.class">MobileCart\StripePaymentBundle\Service\StripePaymentService</parameter>
        <parameter key="cart.listener.payment.method.stripe.js.class">MobileCart\StripePaymentBundle\EventListener\Checkout\StripeJavascript</parameter>
        <!-- todo : move parameters to app/config/config.yml -->
        <parameter key="cart.payment.method.stripe.enabled">1</parameter>
        <parameter key="cart.payment.method.stripe.testmode">1</parameter>
        <parameter key="cart.payment.method.stripe.token.payment.enabled">1</parameter>
    </parameters>

    <services>

        <!-- Service : Stripe Single Payment Method Service -->
        <service id="cart.payment.method.stripe" lazy="true" class="%cart.payment.method.stripe.class%">
            <call method="setFormFactory">
                <argument type="service" id="form.factory" />
            </call>
            <call method="setIsTestMode">
                <argument type="string">%cart.payment.method.stripe.testmode%</argument>
            </call>
            <call method="setTestPublicKey">
                <argument type="string">%stripe.test.public%</argument>
            </call>
            <call method="setTestPrivateKey">
                <argument type="string">%stripe.test.private%</argument>
            </call>
            <call method="setLivePublicKey">
                <argument type="string">%stripe.live.public%</argument>
            </call>
            <call method="setLivePrivateKey">
                <argument type="string">%stripe.live.private%</argument>
            </call>
            <call method="setDefaultAction">
                <argument type="string">create_token</argument>
            </call>
        </service>

        <!-- Event Listener: Collect Stripe Payment Method Service -->
        <service id="cart.listener.payment.method.stripe" lazy="true" class="%cart.listener.payment.method.handler.class%">
            <tag name="kernel.event_listener" event="payment_method.collect" method="onPaymentMethodCollect" priority="50" />
            <call method="setPaymentMethodService">
                <argument type="service" id="cart.payment.method.stripe" />
            </call>
            <call method="setIsEnabled">
                <argument type="string">%cart.payment.method.stripe.enabled%</argument>
            </call>
            <call method="setEntityService">
                <argument type="service" id="cart.entity" />
            </call>
            <call method="setCartSessionService">
                <argument type="service" id="cart.session" />
            </call>
        </service>

        <!-- Event Listener: Add Javascript to Checkout -->
        <service id="cart.listener.payment.method.stripe.js" lazy="true" class="%cart.listener.payment.method.stripe.js.class%">
            <tag name="kernel.event_listener" event="checkout.view.return" method="onCheckoutViewReturn" priority="60" />
            <call method="setPaymentMethodService">
                <argument type="service" id="cart.payment.method.stripe" />
            </call>
        </service>

    </services>

</container>
